                <groupId>be.ww</groupId>
                <artifactId>kitchen-adapter</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>be.ww</groupId>
                <artifactId>kitchen-command</artifactId>
                <version>${project.version}</version>
