                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>be.ww</groupId>
                <artifactId>store-command</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>be.ww</groupId>
                <artifactId>store-query</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>be.ww</groupId>
                <artifactId>planner-api</artifactId>
                <version>${project.version}</version>
